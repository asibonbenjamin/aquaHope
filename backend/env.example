# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Email Service Configuration
# Choose one: gmail, sendgrid, smtp
EMAIL_SERVICE=gmail
FROM_EMAIL=noreply@aquahope.org

# Gmail Configuration (if using Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# SMTP Configuration (if using custom SMTP)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Blockchain Configuration
# Network: localhost, sepolia, mainnet
NETWORK=localhost

# RPC URLs
LOCALHOST_RPC_URL=http://localhost:8545
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Private Key for Admin Operations (KEEP SECURE!)
PRIVATE_KEY=your-private-key-here

# Smart Contract Addresses (update after deployment)
DONATION_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
AIT_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
GOVERNANCE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
BADGE_NFT_ADDRESS=0x0000000000000000000000000000000000000000

# Database Configuration (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/aquahope

# JWT Secret (for authentication)
JWT_SECRET=your-jwt-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100



